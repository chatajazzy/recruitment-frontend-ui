{
  "extends": [
    "eslint:recommended",
    "idiomatic"
  ],
  "env": {
    "browser": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "array-bracket-spacing": 0,
    "brace-style": [
      2,
      "stroustrup",
      {
        "allowSingleLine": false
      }
    ],
    "computed-property-spacing": 0,
    "func-names": 0,
    "indent": [
      2,
      2,
      {
        "VariableDeclarator": {
          "var": 2,
          "let": 2,
          "const": 3
        }
      }
    ],
    "key-spacing": 0,
    "no-inline-comments": 0,
    "no-multi-spaces": 0,
    "space-in-parens": 0,
    "vars-on-top": 0,
    "linebreak-style": 0
  }
}
